{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./declarations"
    ]
  },
  "include": [
    "src/**/*",
    "declarations/**/*",
    "type-assertions/**/*"
  ]
}